    "generate:content": "node scripts/generate-content-index.mjs",
    "build": "NODE_ENV=production node scripts/validate-env.mjs production && node scripts/build.mjs && NODE_ENV=production next build",
    "coverage": "node scripts/run-coverage.mjs && node scripts/check-coverage.mjs",
    "shadcn:coverage": "node scripts/shadcn-coverage.mjs",
    "deploy": "npm run build && netlify deploy --prod --dir=dist",
    "mcp-monitor": "node scripts/mcp-monitor.mjs",
    "mcp-dashboard": "node scripts/mcp-dashboard.mjs",
    "ci": "npm run lint && npm run format:check && npm run security && node scripts/validate-env.mjs production && npm run typecheck && node --test test/ci-comprehensive.test.js && npm run build && npm run coverage",
    "ci:full": "npm run ci && npm run smoke-test:quick"
  },
