{
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "start": "node scripts/dev-server.mjs",
    "lint": "node scripts/lint.mjs && node scripts/eslint.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security": "node scripts/security-check.mjs",
    "typecheck": "node scripts/typecheck-proper.mjs",
    "test": "node --test",
    "smoke-test": "node scripts/smoke-test.mjs",
    "smoke-test:prod": "node scripts/smoke-test.mjs https://abigael-awino-portfolio.netlify.app",
